{
    "manifest_version": 3,
    "name": "Watched! - Youtube Remove from 'Watch Later' Button",
    "description": "Makes the 'Delete from Watch Later' button easier to click.",
    "version": "1.0",
    "content_scripts": [
        {
            "matches": ["https://*.youtube.com/*"],
            "js": ["watch_later.js"],
            "type": "module"
        }
    ],
    "options_ui": {
        "page": "options.html"
    },
    "permissions": ["storage"],
    "web_accessible_resources": [
        {
            "resources": ["storage_utilities.js"],
            "matches": ["https://*.youtube.com/*"]
        }
    ]
}